<div class="card-body" [formGroup]="soSearchForm" [style.fontSize.px]="11">
    <div class="row">

        <div class="col-lg-2">
            <mat-form-field appearance="outline" class="w-100 pb_0">
                <mat-label>Customer Order No.</mat-label>
                <input matInput placeholder="Customer Order No." formControlName="customerOrderNo"
                    [matAutocomplete]="autoCustomerOrderNo" matTooltip="Search Customer Order Number">
                <mat-autocomplete #autoCustomerOrderNo="matAutocomplete" [displayWith]="displayFnCustomerOrderNo"
                    [panelWidth]="500">
                    <mat-option *ngFor="let option of (customerOrderNoList$ | async)" [value]="option">
                        {{option?.saleOrderNumber}}
                    </mat-option>
                </mat-autocomplete>
                <mat-icon matSuffix>search</mat-icon>
            </mat-form-field>
        </div>

        <div class="col-lg-2">
            <mat-form-field appearance="outline" class="w-100 pb_0">
                <mat-label>Customer Name</mat-label>
                <input matInput placeholder="Customer Name" formControlName="customerName"
                    [matAutocomplete]="autoCustomerName" matTooltip="Search Customer Name">
                <mat-autocomplete #autoCustomerName="matAutocomplete" [displayWith]="displayFnCustomerName"
                    [panelWidth]="500">
                    <mat-option *ngFor="let option of (customerNameList$ | async)" [value]="option">
                        {{option?.customerName}}
                    </mat-option>
                </mat-autocomplete>
                <mat-icon matSuffix>search</mat-icon>
            </mat-form-field>
        </div>

        <div class="col-lg-2">
            <mat-form-field appearance="outline" class="w-100 pb_0">
                <mat-label>Customer Type</mat-label>
                <mat-select formControlName="customerType">
                    <mat-option *ngFor="let customer of customersList" [value]="customer.customerType">
                        {{customer.customerType}}
                    </mat-option>
                </mat-select>
            </mat-form-field>
        </div>
        <div class="col-lg-2">
            <mat-form-field appearance="outline" class="w-100 pb_0">
                <mat-label>Customer Order Status</mat-label>
                <mat-select formControlName="customerOrderStatus">
                    <mat-option *ngFor="let status of statusList" [value]="status">{{status}}</mat-option>
                </mat-select>
            </mat-form-field>
        </div>
        <div class="col-lg-2">
            <mat-form-field class="w-100 pb_0" appearance="outline">
                <mat-label>Order From Date</mat-label>
                <input matInput [matDatepicker]="picker1" placeholder="Order From Date" formControlName="orderFromDate"  (dateChange)="fromDateSelected($event)" [max]="today">
                <mat-datepicker-toggle matSuffix [for]="picker1"></mat-datepicker-toggle>
                <mat-datepicker #picker1></mat-datepicker>
            </mat-form-field>
        </div>
        <div class="col-lg-2">
            <mat-form-field class="w-100 pb_0" appearance="outline">
                <mat-label>Order To Date</mat-label>
                <input matInput [matDatepicker]="picker2" placeholder="Order To Date" formControlName="orderToDate" 
                [max]="maxDate" [min]="minDate">
                <mat-datepicker-toggle matSuffix [for]="picker2"></mat-datepicker-toggle>
                <mat-datepicker #picker2></mat-datepicker>
            </mat-form-field>
        </div>

