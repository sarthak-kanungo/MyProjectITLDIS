<div class="card-from mt-2 service-history" [formGroup]="serviceHistoryForm">
  <div class="card" style="border: 1px solid #45afaf;">
    <div
      class="card-header"
      style="background-color: #45afaf;
              border: 1px solid #45afaf;"
    >
      <p class="mb-0" style="font-size: 13px;">SERVICE HISTORY</p>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-sm">
          <thead class="thead-light">
            <tr>
              <th
                class="p-2"
                *ngFor="let tableHeading of serviceHistoryHeading"
              >
                {{ tableHeading }}
              </th>
            </tr>
          </thead>
          <tbody>
            <tr
              *ngFor="let list of serviceHistoryForm.controls; let i = index"
              [formGroupName]="i"
            >
              <td>{{ i + 1 }}</td>
              <td>
                <mat-form-field appearance="outline" >
                  <mat-label>Date In</mat-label>
                  <input
                    matInput
                    placeholder="Date In"
                    formControlName="dateIn"
                  />
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline" >
                  <mat-label>Type of Service</mat-label>
                  <input
                    matInput
                    placeholder="Type of Service"
                    formControlName="serviceType"
                  />
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline" >
                  <mat-label>Hours</mat-label>
                  <input
                    matInput
                    placeholder="Hours"
                    formControlName="hours"
                  />
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline" >
                  <mat-label>Job Card No</mat-label>
                  <input
                    matInput
                    placeholder="Job Card No"
                    formControlName="jobCardNo"
                  />
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline" >
                  <mat-label>Job Card Date</mat-label>
                  <input
                    matInput
                    placeholder="Job Card Date"
                    formControlName="jobCardDate"
                  />
                </mat-form-field>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
