table {
  width: 200%;
  text-align: center;
  color:black;
}
th{
  font-weight: bold
}
th, td{
  font-size: 12px;
}  
table.table-sm th {
  padding-top: .3rem;
  padding-bottom: .3rem;
  padding-right: .3rem;
  width: 17rem;
}
table.table-sm td{
  padding-top: .3rem;
  padding-bottom: .3rem;
  padding-right: .3rem;
}

::-webkit-scrollbar {
  width: 15px;
}
::-webkit-scrollbar-track {
  box-shadow: inset 0 0 5px #aaaa; 
border-radius: 10px;
}
 
::-webkit-scrollbar-thumb {
  background: #e0e2e4; 
  border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
  background: #e0e2e4; 
}

