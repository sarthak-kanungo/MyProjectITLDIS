<div class="d-flex justify-content-between mb-2">

    <div class="card-from mt-2 w-50">
        <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                      border: 1px solid #45afaf;">
                <p class="mb-0" style="font-size: 13px;">Machine Details</p>
            </div>
            <div class="card-body" >
                <table class="table table-bordered table-sm">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="text-left" style="width: 150px;">Series</th>
                            <th scope="col" style="width: 150px;">No.of Machines</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr *ngFor="let table of machineDetailsTable">
                            <td class="text-left">{{table.series}}</td>
                            <td>{{table.noOfMachines}}</td>
                        </tr>
                        <tr *ngIf="isMachineDetails">
                            <td class="text-left">Total</td>
                            <td>{{totalForMachine}}</td>
                        </tr>
                    </tbody>
                </table>

            </div>

        </div>
    </div>

    <div class="card-from mt-2 w-50 ml-1">
        <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                        border: 1px solid #45afaf;">
                <p class="mb-0" style="font-size: 13px;">Service Details</p>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-sm">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="text-left" style="width: 150px;">Type of Service</th>
                            <th scope="col" style="width: 150px;">No.of Machines</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr *ngFor="let table of serviceDetailsTable;index as i">
                            <td class="text-left">{{table.serviceType}}</td>
                            <td >{{table.serviceTypeCount}}</td>
                        </tr>
                        <tr *ngIf="isServiceDetails">
                            <td class="text-left">Total</td>
                            <td>{{totalForService}}</td>
                        </tr>
                    </tbody>
                </table>

            </div>

        </div>
    </div>

</div>