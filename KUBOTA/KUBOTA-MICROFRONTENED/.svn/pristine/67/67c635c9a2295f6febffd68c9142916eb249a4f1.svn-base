<form [formGroup]="activityProposalFrom" [style.fontSize.px]="10">
  <div class="row">
    <div class="col-lg-2" *ngIf="isView">
      <mat-form-field appearance="outline">
        <mat-label>Activity No.</mat-label>
        <input matInput placeholder="Activity No." formControlName="activityNumber">
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field  class="w-100">
        <input matInput [matDatepicker]="picker" placeholder="Activity Creation Date"
          formControlName="activityCreationDate">
        <mat-datepicker-toggle matSuffix [for]="picker"></mat-datepicker-toggle>
        <mat-datepicker #picker></mat-datepicker>
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field appearance="outline" class="w-100">
        <mat-label>Activity Purpose</mat-label>
        <mat-select required formControlName="activityPurpose" (selectionChange)="selectionActivityPurpose($event)" [compareWith]="compareFnActivityPurpose">
          <mat-option *ngFor="let purpose of getPurposeActivity?.result" [value]="purpose">
            {{purpose?.purpose}}</mat-option>
        </mat-select>
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field appearance="outline" class="w-100">
        <mat-label>Activity Type</mat-label>
        <mat-select required formControlName="activityType" [compareWith]="compareFnActivityType" (selectionChange)="selectionActivityType($event)">
          <mat-option *ngFor="let activityType of getActivityType?.result" [value]="activityType">
            {{activityType?.activityType}}
          </mat-option>
        </mat-select>
      </mat-form-field>
    </div>
    
    <div class="col-lg-2">
      <mat-form-field appearance="outline" class="w-100">
        <mat-label>Activity Category</mat-label>
        <mat-select required formControlName="activityCategory" (selectionChange)="selectionActivityCategory($event)" [compareWith]="compareFnActivityCategory">
          <mat-option *ngFor="let activityCategory of activityCategoryList?.result" [value]="activityCategory">
            {{activityCategory?.category}}
          </mat-option>
        </mat-select>
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field appearance="outline">
        <mat-label>Location </mat-label>
        <input matInput placeholder="Location" autocomplete="off" maxlength="20" required formControlName="location"
          (keypress)=keyAlphabets($event)>
      </mat-form-field>
    </div>

    <div class="col-lg-2" *ngIf="isView">
      <mat-form-field appearance="outline">
        <mat-label>Status </mat-label>
        <input matInput placeholder="Status" maxlength="20" formControlName="activityStatus">
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field class="w-100">
        <input matInput [min]="today" [matDatepicker]="picker1" placeholder="From Date" required
          formControlName="fromDate" readonly (click)="picker1.open()" (dateChange)="fromDateSelected($event)">
        <mat-datepicker-toggle matSuffix [for]="picker1"></mat-datepicker-toggle>
        <mat-datepicker #picker1></mat-datepicker>
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field class="w-100">
        <input matInput [min]="minToDate" [matDatepicker]="picker2"
          placeholder="To Date" required formControlName="toDate" readonly (click)="picker2.open()" (dateChange)="toDateSelected($event)">
        <mat-datepicker-toggle matSuffix [for]="picker2"></mat-datepicker-toggle>
        <mat-datepicker #picker2></mat-datepicker>
      </mat-form-field>
    </div>

    <div class="col-lg-2">
      <mat-form-field appearance="outline">
        <mat-label>No. Of Days</mat-label>
        <input matInput placeholder="No. Of Days" formControlName="numberOfDays" type="number">
      </mat-form-field>
    </div>

    <div class="col-lg-2" *ngIf="isActivityCategoryKai">
      <mat-form-field appearance="outline">
        <mat-label>Proposed Budget</mat-label>
        <input matInput placeholder="Proposed Budget" formControlName="proposedBudget" type="number">
      </mat-form-field>
    </div>

    <div class="col-lg-2" *ngIf="isActivityCategoryKai">
      <mat-form-field appearance="outline">
        <mat-label>Max Allowed Budget</mat-label>
        <input matInput placeholder="Max Allowed Budget" formControlName="maxAllowedBudget" type="number">
      </mat-form-field>
    </div>
    
    <div class="col-lg-2" *ngIf="isActivityCategoryKai">
      <mat-form-field appearance="outline">
        <mat-label>Claimable Amount</mat-label>
        <input matInput placeholder="Claimable Amount" formControlName="claimableAmount" type="number">
      </mat-form-field>
    </div>

    <div class="col-lg-2" *ngIf="isView">
      <mat-form-field appearance="outline">
        <mat-label>Approved Amount </mat-label>
        <input matInput placeholder=" Approved Amount" formControlName="approvedAmount">
      </mat-form-field>
    </div>

  </div>
</form>