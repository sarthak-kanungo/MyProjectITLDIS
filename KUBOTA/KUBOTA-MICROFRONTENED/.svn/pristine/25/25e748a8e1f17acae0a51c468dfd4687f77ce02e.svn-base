<div class="card-from mt-2">
        <div class="card" style="border: 1px solid #45afaf;">
          <div class="card-header" style="background-color: #45afaf;
            border: 1px solid #45afaf;">
            <p class="mb-0" style="font-size: 13px;">Invoice Details</p>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-sm">
                <thead class="thead-light">
                  <tr>
                    <th scope="col" style="width: 50px" rowspan="2">Sr.No.</th>
                    <th scope="col" style="width: 150px" rowspan="2">Item Code</th>
                    <th scope="col" style="width: 250px" rowspan="2">Item Desc</th>
                    <th scope="col" rowspan="2">HSN</th>
                    <th scope="col" rowspan="2">Unit Price</th>
                    <th scope="col" rowspan="2">Qty Ship</th>
                    <th scope="col" rowspan="2">Net Amount</th>
                    <th scope="col" colspan="2">CGST</th>
                    <th scope="col" colspan="2">SGST</th>
                    <th scope="col" colspan="2">IGST</th>
                    <th scope="col" rowspan="2">Total Amount</th>
                  </tr>
                  <tr>
                    <th scope="col">%</th>
                    <th scope="col">Amount</th>
                    <th scope="col">%</th>
                    <th scope="col">Amount</th>
                    <th scope="col">%</th>
                    <th scope="col">Amount</th>
                  </tr>
                </thead>
                <tbody >
                  <tr *ngFor="let table of headsTable;index as i">
                    <td>{{i+1}}</td>
                    <td>{{table.itemCode}}</td>
                    <td>{{table.itemDesc}}</td>
                    <td>{{table.hsn}}</td>
                    <td>{{table.unitPrice}}</td>
                    <td>{{table.quantity}}</td>
                    <td>{{table.amount}}</td>
                    <td>{{table.cgstPerc}}</td>
                    <td>{{table.cgstAmt}}</td>
                    <td>{{table.sgstPerc}}</td>
                    <td>{{table.sgstAmt}}</td>
                    <td>{{table.igstPerc}}</td>
                    <td>{{table.igstAmt}}</td>
                    <td>{{table.invoiceAmount}}</td>
                  </tr>
                </tbody>
                <tfoot>

                  <tr>
                    <th></th>
                    <th colspan="4">Total</th>
                    <th>{{totalQty}}</th>
                    <th>{{totalNetAmount}}</th>
                    <th colspan="2">{{totalCgstAmount}}</th>
                    <th colspan="2">{{totalSgstAmount}}</th>
                    <th colspan="2">{{totalIgstAmount}}</th>
                    <th>{{totalAmount}}</th>
                  </tr>

                </tfoot>

              </table>
            </div>

           
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Amount in Words</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" value="{{totalInWords}}" disabled>
              </div>
            </div>
                  
          </div>
        </div>
      </div>