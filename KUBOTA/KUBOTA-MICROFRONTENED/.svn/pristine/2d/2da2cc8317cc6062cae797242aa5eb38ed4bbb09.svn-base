  <div class="col-lg-2">
    <mat-form-field class="w-100">
      <input matInput [matDatepicker]="fromPicker" placeholder="Receipt From Date" formControlName="fromDate"
      (dateChange)="fromDateSelected($event)" [max]="today" readonly (click)="fromPicker.open()">
      <mat-datepicker-toggle matSuffix [for]="fromPicker"></mat-datepicker-toggle>
      <mat-datepicker #fromPicker></mat-datepicker>
    </mat-form-field>
  </div>

  <div class="col-lg-2">
    <mat-form-field class="w-100">
      <input matInput [matDatepicker]="toPicker" placeholder="Receipt To Date" formControlName="toDate"
      [max]="maxDate" [min]="minDate" readonly (click)="toPicker.open()">
      <mat-datepicker-toggle matSuffix [for]="toPicker"></mat-datepicker-toggle>
      <mat-datepicker #toPicker></mat-datepicker>
    </mat-form-field>
  </div>

</div>