<div class="row" [formGroup]="searchPaymentReceiptForm">

  <div class="col-lg-2">
    <mat-form-field appearance="outline">
      <mat-label>Receipt No.</mat-label>
      <input matInput placeholder="Receipt No." formControlName="receiptNumber" [matAutocomplete]="autoReceiptNumber">
      <mat-autocomplete #autoReceiptNumber="matAutocomplete" [panelWidth]="500">
        <mat-option *ngFor="let option of receiptNumberList|async" [value]="option.receiptNumber">
          {{option?.receiptNumber}}
        </mat-option>
      </mat-autocomplete>
      <mat-icon matSuffix>search</mat-icon>
    </mat-form-field>
  </div>

  <div class="col-lg-2 ">
    <mat-form-field appearance="outline" class="w-100">
      <mat-label>Receipt Mode</mat-label>
      <mat-select formControlName="receiptMode">
        <mat-option *ngFor="let mode of receiptModeList" [value]="mode.receiptMode">
          {{mode.receiptMode}}</mat-option>
      </mat-select>
    </mat-form-field>
  </div>

