<div class="container confirmation_card">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card_header card_header_secondary mb-2">
            <h4 class="card_title mb-0"> Forgot Password</h4>
            <i class="material-icons icon_close" (click)="close()">
              close
            </i>
          </div>
          <div class="container-fluid card_body">      
            <form [formGroup]="forgotPasswordForm" [style.fontSize.px]="10" class="border p-2" >
                <div class="row">
                  <div class="col-lg-12">
                    <mat-form-field class="w-100" appearance="outline">
                      <mat-label>Username</mat-label>
                      <input matInput type='username' placeholder="Username" formControlName="username" (keypress)="preventWhiteSpace($event)" (cut)="$event.preventDefault()" (copy)="$event.preventDefault()" (paste)="$event.preventDefault()">
                    </mat-form-field>
                    <mat-error *ngIf="forgotPasswordForm.get('username').hasError('invalid')">{{PasswordError}}</mat-error>
                  </div>
                </div>
            </form>
          </div>
        <div class="container-fluid card_footer m-2">
          <div class="row">
            <div class="col-12 text-center">
              <button class="btn button mr-2" [ngClass]="{'button_color_green':true}" (click)="submit()"> Submit </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>