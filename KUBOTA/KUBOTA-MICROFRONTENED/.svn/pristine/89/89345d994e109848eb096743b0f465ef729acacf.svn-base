              <th scope="col">Qty</th>
              <th scope="col">Incentive/Qty</th>
              <th scope="col">Qty</th>
              <th scope="col">Incentive/Qty</th>
              <th scope="col" *ngIf="isMaximumQtySelected">Maximum Qty</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
