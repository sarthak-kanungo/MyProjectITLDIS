              <td *ngIf="isMaximumQtySelected"></td>
            </tr>

            <tr>
              <td>2</td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td *ngIf="isMaximumQtySelected"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
