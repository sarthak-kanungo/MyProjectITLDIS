.table{
  text-align: center
}
th, td{
  font-size: 12px;
}  
table.table-sm th {
  padding-top: .3rem;
  padding-bottom: .3rem;
  padding-right: .3rem;
}
a{
  text-decoration: underline;
}
input{
  width: 100px;
   border-radius: 3px;
   border: 1px solid lightgray;
 }
.data{
 width: 200px;
}
.data1{
