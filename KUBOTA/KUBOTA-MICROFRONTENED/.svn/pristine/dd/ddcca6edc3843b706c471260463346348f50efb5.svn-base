<div class="card-from mt-2 retro-fitment" [formGroup]="labourChargesForm">
  <div class="card" style="border: 1px solid #45afaf;">
    <div class="card-header" style="background-color: #45afaf;
              border: 1px solid #45afaf;">
      <p class="mb-0" style="font-size: 13px;">LABOUR CHARGES</p>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-sm">
          <thead class="thead-light">
            <tr>
              <th class="p-2" *ngFor="let tableHeading of labourChargeHeading">{{tableHeading}}</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let list of labourChargesForm.controls; let i=index" [formGroupName]="i">
              <td class="chkBox">
                <mat-checkbox [labelPosition]="'before'" [checked] formControlName="isSelected">{{i+1}}</mat-checkbox>
              </td>
              <td *ngIf="!isView">
                <mat-form-field appearance="outline" class="w-100" [style.fontSize.px]="10">
                  <mat-label>JOB Code</mat-label>
                  <input matInput placeholder="JOB Code" formControlName="serviceMtJobcode"
                    [matAutocomplete]="autoJobCode" />
                  <mat-autocomplete #autoJobCode="matAutocomplete" [displayWith]="displayJobCodeFn" [panelWidth]="300"
                    (optionSelected)="jobCodeSelection($event, list)">
                    <mat-option *ngFor="let option of jobCode" [value]="option">
                      {{ option?.jobCodeNo }}
                    </mat-option>
                  </mat-autocomplete>
                  <mat-error *ngIf="list.get('serviceMtJobcode').hasError('selectFromList')">Please select from list</mat-error>
                  <mat-icon matSuffix>search</mat-icon>

                </mat-form-field>


              </td>
              <td *ngIf="isView">
                <mat-form-field class="w-100" appearance="outline">
                  <mat-label>Job Code</mat-label>
                  <input matInput placeholder="Job Code" formControlName="serviceMtJobcode">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field class="w-100" appearance="outline">
                  <mat-label>Description</mat-label>
                  <input matInput placeholder="Description" formControlName="description">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field class="w-100" appearance="outline">
                  <mat-label>Hours</mat-label>
                  <input matInput placeholder="Hours" autocomplete="off" formControlName="hours">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field class="w-100" appearance="outline">
                  <mat-label>Claim Amount</mat-label>
                  <input matInput placeholder="Claim Amount" autocomplete="off" formControlName="claimAmount">
                </mat-form-field>
              </td>

            </tr>
          </tbody>
        </table>
      </div>
      <div class="row" *ngIf="!isView">
        <div class="col-lg-12">
          <div class="d-flex bd-highlight">

            <div class="w-100 text-center">
              <button (click)="addRow()" type="button" class="btn btn_primary px-2" style="font-size: 11px;"> Add Row
              </button>
              <button (click)="deleteRow()" type="button" class="btn btn_secondary px-2 ml-2" style="font-size: 11px;">
                Delete Row
              </button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="card-from mt-2">
    <div class="card" style="border: 1px solid #45afaf;">
      <div class="card-header" style="background-color: #45afaf;border: 1px solid #45afaf;">
        <p class="mb-0" style="font-size: 13px;">File Attachments</p>
      </div>
      <div class="card-body">

        <div class="row" [style.fontSize.px]="14" *ngIf="!isFilesCountFive() && !isView">
          <div class="col-lg-6">
            <div class="d-flex bd-highlight">

              <div class="w-50 flex-fill bd-highlight">
                <div class="input-group">
                  <div class="custom-file">
                    <input type="file" (change)="fileSelectionChanges($event)" class="custom-file-input" name="image"
                      accept="image/x-png,image/jpeg">
                    <label class="custom-file-label">Choose file</label>
                  </div>
                </div>
              </div>
              <div class="w-25"></div>
            </div>
          </div>

        </div>
        <div class="row mt-2 text-center" *ngIf="!isView">
          <div class="col-md-2 d-flex justify-content-around" *ngFor="let file of files">
            <div class="card file-preview-card">
              <label class="custom-preview-label"> {{file.file.name}} </label>
              <img [src]="file.previewUrl" height="120" width="185" />
              <div class="card-body">
                <i style="color: #45afaf;" class="material-icons" (click)="deleteImage(file.id)">delete</i>
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-2 text-center" *ngIf="isView">
          <div class="col-md-2 d-flex justify-content-around" *ngFor="let file of warrantyPcrPhotos">
            <div class="card file-preview-card">
              <label> {{file.fileName}} </label>
              <img src="{{fileStaticPath}}/{{file.fileName}}" height="120" width="185" />
              <div class="card-body">
                <a href="{{fileStaticPath}}/{{file.fileName}}" download>
                  <i style="color: #45afaf;" class="material-icons">cloud_download</i>
                </a>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>