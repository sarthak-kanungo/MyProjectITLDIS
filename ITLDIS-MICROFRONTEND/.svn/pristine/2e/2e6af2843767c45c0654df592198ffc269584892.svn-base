<div class="card-from mt-2">
  <div class="card" style="border: 1px solid #45afaf;">
    <div class="card-header" style="background-color: #45afaf;
      border: 1px solid #45afaf;">
      <p class="mb-0" style="font-size: 13px;">Reporting Employee Details</p>
    </div>
    <div class="card-body">

      <form [formGroup]="reportingemployeeDetailsForm" [style.fontSize.px]="11">
        <div class="row">

          <div class="col-lg-2">
            <mat-form-field class="w-100" appearance="outline">
              <mat-label>Reporting Employee Code</mat-label>
              <input matInput placeholder="Reporting Employee Code" formControlName="reportingEmployeeCode"
                [matAutocomplete]="autoReportingEmployeeCode">
              <mat-autocomplete #autoReportingEmployeeCode="matAutocomplete"
                [displayWith]="displayFnReportingEmployeeCode" [panelWidth]="500"
                (optionSelected)="selectReportingEmployeeCode($event)">
                <mat-option *ngFor="let option of reportingEmployeeCodeList?.result" [value]="option">
                  {{option?.employeeCode}} | {{option?.employeeName}}
                </mat-option>
              </mat-autocomplete>
              <mat-icon matSuffix>search</mat-icon>
              <mat-error *ngIf="reportingemployeeDetailsForm.controls.reportingEmployeeCode.hasError('selectFromList')"> Please select from list </mat-error>
            </mat-form-field>
          </div>

          <div class="col-lg-2">
            <mat-form-field appearance="outline">
              <mat-label>Reporting Employee Name</mat-label>
              <input matInput placeholder="Reporting Employee Name" formControlName="reportingEmployeeName">
            </mat-form-field>
          </div>

        </div>
      </form>

      <div class="d-flex justify-content-between mb-2">

        <div class="card-from mt-2 w-50">
          <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                      border: 1px solid #45afaf;">
              <p class="mb-0" style="font-size: 13px;">Reporting To Hierarchy</p>
            </div>
            <div class="card-body">

              <div class="table-responsive">
                <table class="table table-bordered table-sm">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col" style="width: 10px;">Sr.No.</th>
                      <th scope="col">Employee Name</th>
                    </tr>
                  </thead>
                  <tbody>
                      <!-- <tr *ngFor="let emplyee of employeeName">
                          <td>{{emplyee}}</td>
                          <td>{{emplyee}}</td>
                        </tr> -->
                    <tr>
                      <td>1</td>
                      <td>{{this.emplyeeDetailsService.reportingEmployee.reportingEmployeeName}} 
                        ({{this.emplyeeDetailsService.reportingEmployee.reportingEmployeeCode}})</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="card-from mt-2 w-50 ml-1">
          <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                        border: 1px solid #45afaf;">
              <p class="mb-0" style="font-size: 13px;">Direct Reportees</p>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-sm">
                  <thead class="thead-light">
                    <tr>
                      <th scope="col" style="width: 10px;">Sr.No.</th>
                      <th scope="col">Employee Name</th>
                    </tr>
                  </thead>
                  <tbody> 
                    <tr *ngFor="let dR of this.emplyeeDetailsService.directRepotees">
                      <td>{{dR.id}}</td>
                      <td>{{dR.directRepotee}}</td>
                    </tr>
                  </tbody>
                </table>
              </div>

            </div>

          </div>
        </div>

      </div>
    </div>

  </div>
</div>