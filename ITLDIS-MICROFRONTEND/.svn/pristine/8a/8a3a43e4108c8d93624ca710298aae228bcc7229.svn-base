
<div class="container-fluid mt-3 mb-3">
  <div class="row">
    <div class="col-lg-12">
      <div class="d-flex justify-content-between">
        <div>
          <p class="font-weight-bold" style="color: #354052">
            
          </p>
        </div>

        <div><a href="assets/docs/CF Limit Upload.xlsx" class="font-weight-normal">
            <u>Download Excel Template </u>
          </a></div>

      </div>

    </div>

    <div class="col-lg-12">
      <div class="card-from">

        <div class="card">
          <div class="card-header">
            <p class="mb-0">Upload File</p>
          </div>
          <div class="card-body">

            <form [formGroup]="channelFinanceLimitUploadForm">
              <div class="row">
                <div class="col-md-3" >
                  <div class="input-group">
                  <div class="custom-file">
                    <label class="custom-file-label">Upload Document</label>
                    <input type="file" name="excel" required (change)="fileSelctionChanges($event)" accept=".xlsx"
                       class="custom-file-input" formControlName="excelSheet" multiple="false" />
                  </div>
                </div>
                </div>
              </div>
              <div class="row mt-2 text-center">
                <div class="col-md-2 d-flex justify-content-around" *ngFor="let file of files">
                  <div class="card" [style.width.rem]="13">
                    <!-- <i class="material-icons">description</i> -->
                    <label> {{file.file.name}} </label>
                    <div class="card-body">
                      <hr>
                      <i class="material-icons" (click)="deleteFile(file.id)">delete</i>
                    </div>
                  </div>
                </div>
              </div>
              </form>
          <div class=" text-center mt-2 ">
              <button type="button" class="btn btn_primary pl-3 pr-3" *ngIf = "validFile" (click)="onClickSubmit()"> Submit
                </button>
          </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>