<div class="mt-3">
        <div class="d-flex bd-highlight">
          <div class="mr-auto pt-2 bd-highlight">
            <p class="font-weight-bold" style="color: #354052">
              Search Results
            </p>
          </div>
          <div class="pr-3 bd-highlight">
            <label class="mr-2" style="font-size: 0.9rem;">Items Per Page</label>
            <mat-form-field [style.fontSize.px]="12" [style.width.px]="50">
              <mat-select [value]="selected">
                <mat-option *ngFor="let size of recordPerPageList" [value]="size">
                  {{size}}
                </mat-option>
              </mat-select>
            </mat-form-field>
          </div>
        </div>
    
        <div class="table-responsive">
          <table class="table table-bordered table-sm">
            <thead class="thead-light">
              <tr>
                <th scope="col" style="width: 100px ;padding-bottom: 11px;" >Approve/Reject</th>
                <th scope="col" style="width: 53px;padding-bottom: 11px; ">Sr No.</th>
                <th scope="col" style="width: 212px;padding-bottom: 11px;">PO No.</th>
                <th scope="col" style="width: 212px;padding-bottom: 11px;">Dealer Code</th>
                <th scope="col" style="width: 212px;padding-bottom: 11px;">Dealer Name</th>
                <th scope="col" style="width: 100px;padding-bottom: 11px;">Dealer State</th>
                <th scope="col" style="width: 212px;padding-bottom: 11px;">Depot</th>
                <th scope="col" style="width: 100px;padding-bottom: 11px;">PO Date</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Base Amount</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Total GST Amount</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Total PO Amount</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Total Credit Limit</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Outstanding</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Available Limit</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Pending Payment</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">Pending PO Amount</th>
                <th scope="col" style="width: 150px;padding-bottom: 11px;">PO Approval Pending</th>
                <th scope="col" style="width: 150px">Approval Required Amount</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="text-center">
                  <button class="btn btn-sm button" (click)="validateForm()"
                  [ngClass]="{'button_color_green':(!!btnName && (btnName.toLowerCase() === 'approve') || (btnName.toLowerCase() === 'approved'))}">
                  {{btnName}}</button>
                </td>
                <td>1</td>
                <td>
                    <a style="color: #007bff;" [routerLink]="[ '/sales-pre-sales/purchase/purchase-order/pocreate' ]"><u>PO1</u></a>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
    
            </tbody>
          </table>
        </div>
    
        <mat-paginator showFirstLastButtons hidePageSize [length]="50" [pageSize]="10" [pageSizeOptions]="[5, 10, 25, 50]">
        </mat-paginator>
    
</div>