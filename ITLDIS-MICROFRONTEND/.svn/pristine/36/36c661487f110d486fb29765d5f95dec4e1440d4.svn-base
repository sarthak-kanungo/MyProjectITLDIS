.card{
    min-height: 15vh;
    box-shadow: 4px 5px 5px 0 rgba(0, 0, 0, 0.5);   
}
a{
    color: white;
    font-size: 13.98987px;
}
a:hover{
    text-decoration: underline;
}
.card-footer{
    padding-top: 5px;
    padding-left: 10px;
    padding-bottom: 5px;
    font-size: 13.57687px;
    font-weight: bold;
    
}
@media (min-width: 992px){
.col-lg-3 {
    -webkit-box-flex: 0;
    flex: 0 0 20%;
    width: 25%;
}
}
@media(max-width: 680px){
    .imgsize{
        width: 300px;
    }
}
@media(min-width: 681px){
    .imgsize{
        width: 100%;
    }
}