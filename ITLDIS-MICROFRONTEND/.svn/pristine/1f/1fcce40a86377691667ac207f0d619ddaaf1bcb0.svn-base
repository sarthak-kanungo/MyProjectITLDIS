.material-datatables {
    max-height: 390px;
    overflow-y: auto;
  }
  
  th, thead ::ng-deep td {
    position: -webkit-sticky;
    position: sticky;
  }
  
  th {
    top: 0;
    z-index: 2;
  }
  
  thead ::ng-deep td {
    top: 9%;
    z-index: 30;
    background-color: #fff;
  }
  