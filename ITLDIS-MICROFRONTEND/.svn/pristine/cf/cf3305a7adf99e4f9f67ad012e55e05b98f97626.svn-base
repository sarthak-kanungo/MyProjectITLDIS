<div [style.fontSize.px]="10" [formGroup]="searchSparesInvoiceForm">
    <div class="row">

        <div class="col-lg-2">
            <mat-form-field class="w-100" appearance="outline">
                <mat-label>Sales Invoice </mat-label>
                <input matInput placeholder="Sales Invoice" [matAutocomplete]="autoInvoiceNumber"
                    formControlName="salesInvoice">
                <mat-autocomplete #autoInvoiceNumber="matAutocomplete" [displayWith]="displayInvoiceNumberFn"
                    [panelWidth]="500">
                    <mat-option *ngFor="let option of invoiceNumberList |async" [value]="option">
                        {{option.value}}
                    </mat-option>
                </mat-autocomplete>
                <mat-icon matSuffix>search</mat-icon>
                <mat-error *ngIf="searchSparesInvoiceForm.get('salesInvoice').hasError('selectFromList')">
                    {{searchSparesInvoiceForm.get('salesInvoice').errors['selectFromList']}}</mat-error>
            </mat-form-field>
        </div>

