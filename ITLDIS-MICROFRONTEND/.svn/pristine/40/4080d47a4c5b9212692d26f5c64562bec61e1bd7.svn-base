<div class="container-fluid create-form  mt-4 mb-3">
  <div class="card-from">
    <div class="card">
      <div class="card-header">
        <p class="mb-0">Add New</p>
      </div>
      <div class="card-body">
        <form [formGroup]="sourceForm">
          <app-add-new-source [sourceDetailsForm]="sourceDetailsForm"></app-add-new-source>

          <div class=" text-center mt-2 ">
            <button type="button" class="btn btn_primary pl-3 pr-3" (click)="submitSource()"> Submit
            </button>
            <button type="button" (click)="clearSourceForm()" class="btn btn_secondary pl-3 pr-3 ml-3"> Clear
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>