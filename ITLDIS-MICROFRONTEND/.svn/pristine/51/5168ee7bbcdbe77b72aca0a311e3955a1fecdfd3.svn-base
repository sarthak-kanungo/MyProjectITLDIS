            <form [formGroup]="newdepartmentForm" [style.fontSize.px]="11">
              <div class="row">

                <div class="col-lg-2">
                  <mat-form-field appearance="outline" class="w-100">
                    <mat-label>Department Code</mat-label>
                    <input matInput placeholder="Department Code" formControlName="departmentCode" maxlength="2" (change)="checkDuplicateKaiDepartmentCode($event.target.value)">
                    <mat-error *ngIf="newdepartmentForm.get('departmentCode').hasError('departmentCodeErroe')">
                      Department Code Already Exist
                     </mat-error>
                  </mat-form-field>
                </div>

                <div class="col-lg-2">
                  <mat-form-field appearance="outline" class="w-100">
                    <mat-label>Department Name</mat-label>
                    <input matInput placeholder="Department Name" formControlName="departmentName" (change)="checkDuplicateKaiDepartmentName($event.target.value)">
                    <mat-error *ngIf="newdepartmentForm.get('departmentName').hasError('departmentNameErroe')">
                      Department Name Already Exist
                     </mat-error>
                  </mat-form-field>
                </div>

