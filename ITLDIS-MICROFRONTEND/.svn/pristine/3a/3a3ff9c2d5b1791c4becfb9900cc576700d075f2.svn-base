<div class="container-fluid mt-4">
    <div class="card-from ">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <p class="mb-0"> Search Spares Payment Receipt</p>
                <button [routerLink]="[ './create' ]" class="font-weight-bold btn btn_header bg_white">
                    <b>New </b>
                </button>
            </div>
            <div class="card-body">
                <form [style.fontSize.px]="10" [formGroup]="searchPaymentReceiptForm">
                    <app-spare-payment-receipt-search
                        [filterState]="filterData"
                    ></app-spare-payment-receipt-search>
                </form>

                <div class=" text-center mt-2 pb-2">
                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="searchSparePaymentReceipt()">
                        Search
                    </button>
                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="clearForm()"> Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <ngsw-search-table [tableTitle]="'Search Result'" [dataTable]="dataTable" [totalElements]="totalTableElements"
        [clickOnTableFields]="[{'title':'receiptNumber','isClickable':true}]" (pageChange)="pageSizeChange($event)"
        [searchValue]="searchValue" (actionOnTableRecord)="tableAction($event)" [page]="page" [size]="size" [clearSearchRow]="clearSearchRow" >

        <td [ngsw-searchField]="receiptNumber" [searchColumnName]="'receiptNumber'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #receiptNumber [(ngModel)] ="receiptNumberNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="receiptType" [searchColumnName]="'receiptType'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #receiptType [(ngModel)] ="receiptTypeNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="receiptMode" [searchColumnName]="'receiptMode'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #receiptMode [(ngModel)] ="receiptModeNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="receiptDate" [searchColumnName]="'receiptDate'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput [matDatepicker]="receiptDatePicker" #receiptDate
                    (dateInput)="etSearchDateValueChange(receiptDate.value,'receiptDate')" [(ngModel)] ="receiptDateNgModel">
                <mat-datepicker-toggle matSuffix [for]="receiptDatePicker"></mat-datepicker-toggle>
                <mat-datepicker #receiptDatePicker></mat-datepicker>
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="receiptAmount" [searchColumnName]="'receiptAmount'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #receiptAmount [(ngModel)] ="receiptAmountNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="payeeType" [searchColumnName]="'payeeType'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #payeeType [(ngModel)] ="payeeTypeNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="customerName" [searchColumnName]="'customerName'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #customerName [(ngModel)] ="customerNameNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="customerAddress1" [searchColumnName]="'customerAddress1'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #customerAddress1 [(ngModel)] ="customerAddress1NgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="customerAddress2" [searchColumnName]="'customerAddress2'">
