        </td>

        <td [ngsw-searchField]="remark" [searchColumnName]="'remark'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #remark [(ngModel)] ="remarkNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="checkDDNumber" [searchColumnName]="'checkDDNumber'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #checkDDNumber [(ngModel)] ="checkDDNumberNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="checkDDDate" [searchColumnName]="'checkDDDate'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput [matDatepicker]="checkDDDatePicker" #checkDDDate
