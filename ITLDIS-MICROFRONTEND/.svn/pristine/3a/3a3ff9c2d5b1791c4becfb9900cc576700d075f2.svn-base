                <mat-datepicker-toggle matSuffix [for]="checkDDDatePicker"></mat-datepicker-toggle>
                <mat-datepicker #checkDDDatePicker></mat-datepicker>
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="checkDDBank" [searchColumnName]="'checkDDBank'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #checkDDBank [(ngModel)] ="checkDDBankNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="cardType" [searchColumnName]="'cardType'">
