                <input matInput #cardName [(ngModel)] ="cardNameNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="transactionNumber" [searchColumnName]="'transactionNumber'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #transactionNumber [(ngModel)] ="transactionNumberNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="transactionDate" [searchColumnName]="'transactionDate'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput [matDatepicker]="transactionDatePicker" #transactionDate
                    (dateInput)="etSearchDateValueChange(transactionDate.value,'transactionDate')" [(ngModel)] ="transactionDateNgModel">
                <mat-datepicker-toggle matSuffix [for]="transactionDatePicker"></mat-datepicker-toggle>
                <mat-datepicker #transactionDatePicker></mat-datepicker>
            </mat-form-field>
        </td>

    </ngsw-search-table>

</div>