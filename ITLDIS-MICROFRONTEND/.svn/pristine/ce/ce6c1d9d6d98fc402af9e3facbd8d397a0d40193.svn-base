<div class="card-from mt-2 material-details" [formGroup]="materialDetailsForm">
  <div class="card" style="border: 1px solid #45afaf;">
    <div class="card-header" style="background-color: #45afaf;
              border: 1px solid #45afaf;">
      <p class="mb-0" style="font-size: 13px;">MATERIAL DETAILS</p>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-sm">
          <thead class="thead-light">
            <tr>
              <th class="p-2" *ngFor="let tableHeading of materialDetailHeading">{{tableHeading}}</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let list of materialDetailsForm.controls; let i=index;" [formGroupName]="i">
              <td class="chkBox">
                <mat-checkbox [labelPosition]="'before'" [checked] formControlName="isSelected">{{i+1}}</mat-checkbox>
              </td>
              <td>
                <mat-form-field class="w-100" appearance="outline" *ngIf="!isView">
                  <mat-label>Item No</mat-label>
                  <input matInput placeholder="Item No" formControlName="sparePartMaster" [matAutocomplete]="auto"
                    (focus)='itemNoApi($event,i)'>
                  <mat-icon matSuffix>search</mat-icon>
                  <mat-autocomplete [displayWith]="displayCodeFn" autoActiveFirstOption #auto="matAutocomplete"
                    (optionSelected)="getPartDetailsByPartNumber($event, list,i)">
                    <mat-option *ngFor="let option of autoCompleteData" [value]="option">
                      {{option.itemNo}}
                    </mat-option>
                  </mat-autocomplete>
                  <mat-error *ngIf="list.get('sparePartMaster').hasError('selectFromList')">Please select from list</mat-error>

                </mat-form-field>
                <mat-form-field appearance="outline" *ngIf="isView">
                  <mat-label>Item No</mat-label>
                  <input matInput placeholder="Item No" formControlName="sparePartMaster" />

                </mat-form-field>
              </td>
              <td>
                <mat-form-field class="w-100" appearance="outline">
                  <mat-label>Item Description</mat-label>
                  <input matInput placeholder="Item Description" formControlName="description">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field class="w-100" appearance="outline">
                  <mat-label>Quantity</mat-label>
                  <input matInput placeholder="Quantity" autocomplete="off" formControlName="quantity">
                  <!-- <mat-error *ngIf="materialDetailsForm.controls.get('quantity').hasError('required')">
                    <strong>  Quantity is Required</strong>
                </mat-error> -->
                </mat-form-field>
              </td>

            </tr>
          </tbody>
        </table>
      </div>
      <div class="row" *ngIf="!isView">
        <div class="col-lg-12">
          <div class="d-flex bd-highlight">

            <div class="w-100 text-center">
              <button (click)="addRow()" type="button" class="btn btn_primary px-2" style="font-size: 11px;"> Add Row
              </button>
              <button (click)="deleteRow()" type="button" class="btn btn_secondary px-2 ml-2" style="font-size: 11px;">
                Delete Row
              </button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>