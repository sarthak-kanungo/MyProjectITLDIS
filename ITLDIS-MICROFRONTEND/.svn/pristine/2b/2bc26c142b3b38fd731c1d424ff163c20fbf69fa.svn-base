<div class="card"  style="border: 1px solid #45afaf;">
    <div class="card-header d-flex justify-content-between" style="background-color: #45afaf;
    border: 1px solid #45afaf;">
        <p class="mb-0">Complaint Resolution</p>
        <button class="font-weight-bold btn btn_header bg_white" (click)="closeDialog()">Close</button>
    </div>
    <mat-dialog-content>
        <div class="card-body">
            <div [formGroup]="complaintResolutionForm" [style.fontSize.px]="11">
                <div class="row">
                    <div class="col-lg-2">
                        <mat-form-field appearance="outline" class="w-100">
                            <mat-label>FRT(First Response Time) Status</mat-label>
                            <input matInput placeholder="FRT Status" formControlName="frtStatus" >
                        </mat-form-field>
                    </div>
                    <div class="col-lg-2">
                        <mat-form-field appearance="outline" class="w-100">
                            <mat-label>Reason For Delay FRT (> 6 Hrs Mandatory)</mat-label>
                            <mat-select placeholder="Reason For Delay FRT" title="Reason For Delay FRT (> 6 Hrs Mandatory)" formControlName="reasonForDelayFrt" >
                                <mat-option *ngFor="let option of reasonDelayFRT" [value]="option.lookupval">{{option.lookupval}}</mat-option>
                            </mat-select>
                        </mat-form-field>
                    </div>
                    <div class="col-lg-2">
                        <mat-form-field appearance="outline" class="w-100">
                            <mat-label>Action Taken</mat-label>
                            <input matInput placeholder="Action Taken" formControlName="actionTaken" required>
                        </mat-form-field>
                    </div>
                    <div class="col-lg-2">
                        <mat-form-field appearance="outline" class="w-100">
                            <mat-label>Reason For Delay ART (> 3 Days Mandatory)</mat-label>
                            <mat-select placeholder="Reason For Delay ART" title="Reason For Delay ART (> 3 Days Mandatory)" formControlName="reasonForDelayArt">
                                <mat-option *ngFor="let option of reasonDelayART" [value]="option.lookupval">{{option.lookupval}}</mat-option>
                            </mat-select>    
                        </mat-form-field>
                    </div>
                    <div class="col-lg-2">
                        <!-- <mat-form-field appearance="outline" class="w-100">
                            <mat-label>Invalid</mat-label>
                            <input type="checkbox" placeholder="Invalid" formControlName="isInvalid" >
                        </mat-form-field> -->
                        <mat-checkbox color="basic" formControlName="isInvalid">
                            <mat-label style='font-size:14px'>INVALID</mat-label>
                        </mat-checkbox>
                    </div>
                    <div class="col-lg-2">
                        <button type="button" class="btn  btn_primary px-3" (click)="updateComplaintResolutionDetails()">
                            Update
                        </button>
                    </div>    
                </div>    
             </div>   
        </div> 
    </mat-dialog-content>
</div>        