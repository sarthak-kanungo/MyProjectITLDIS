::ng-deep .confirmation_modal {
    .mat-dialog-container {
        padding: 0px;
        background-color: transparent;
        box-shadow: none;
    }
}
.upload-err {
  border: 2px solid #f44336;
  border-radius: 5px;
}
.confirmation_card {
    padding: 0px 0px;
    background-color: transparent;

    .card {
        border: 1px solid rgba(0, 0, 0, 0.095);
        border-radius: .5rem;
        box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.14);

        .card_header {
            // margin: -20px 20px 20px 20px;
            padding: 8px;
            border-radius: 6px;
            position: relative;

            .card_title {
                text-align: center;
                font-size : 14px !important;
            }

            p {
                color: rgba(255, 255, 255, 0.7);
            }

            .icon_close {
                position: absolute;
                top: 3px;
                right: 5px;
                font-size: 20px;
                cursor: pointer;
                border-radius: 50%;
                padding: 2px;

                &:hover {
                    box-shadow: 0 11px 15px -7px rgba(0, 0, 0, 0.2), 0 24px 38px 3px rgba(0, 0, 0, 0.14), 0 9px 46px 8px rgba(0, 0, 0, 0.12);
                    background-color: rgba(0, 0, 0, 0.2);
                }
            }
        }

        .card_header_secondary {
            // background: linear-gradient(60deg, #ef5350, #e53935);
           background-color:#00a8a9;
            color: #fff;
          //  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.14), 0 7px 10px -5px $color_secondary_1;
        }

        .card_footer {
            margin-bottom: 0.25rem;

            .button {
                padding: 0.1rem 1rem;
                border: 1px solid #6295b6 !important;
                color: #028383 !important;
               // background-color: #028383 !important;
                // border: 1px solid  var(--btn_theme_color);
                // color: var(--btn_theme_color) !important;
                // background: $color_silver;
            }

            .button_color_green {
                border: 1px solid transparent !important;
              color: #ffffff !important;
             background-color: #028383 !important;
             box-shadow: 0px 2px 8px 2px rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
            
            }
        }
    }
}