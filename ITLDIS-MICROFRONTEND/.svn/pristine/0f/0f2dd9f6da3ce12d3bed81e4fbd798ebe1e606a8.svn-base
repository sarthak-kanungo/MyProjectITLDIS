<div class="card-from mt-2" [formGroup]="concernForm">
    <div class="card" style="border: 1px solid #45afaf;">
        <div class="card-header" style="background-color: #45afaf;
                        border: 1px solid #45afaf;">
            <p class="mb-0" style="font-size: 13px;">Concern</p>
        </div>
        <div class="card-body">

            <div class="row">

                <div class="col-lg-9">
                    <mat-form-field appearance="outline">
                        <mat-label>Customer Concern</mat-label>
                        <textarea matInput placeholder="Customer Concern" maxlength="499" formControlName="customerConcern"></textarea>
                    </mat-form-field>
                </div>
                <div class="col-lg-9">
                    <mat-form-field appearance="outline">
                        <mat-label>Mechanic Observation</mat-label>
                        <textarea matInput placeholder="Mechanic Observation"
                            formControlName="mechanicObservation" maxlength="499"></textarea>
                    </mat-form-field>
                </div>
                <div class="col-lg-9">
                    <mat-form-field appearance="outline">
                        <mat-label>Dealer Observation</mat-label>
                        <textarea matInput placeholder="Dealer Observation"
                            formControlName="dealerObservation" required maxlength="499"></textarea>
                    </mat-form-field>
                </div>
                <div class="col-lg-9">
                    <mat-form-field appearance="outline">
                        <mat-label>Action Taken</mat-label>
                        <textarea matInput placeholder="Action Taken" formControlName="actionTaken" required maxlength="499"></textarea>
                    </mat-form-field>
                </div>
            </div>

        </div>


    </div>
</div>