<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">
            com.microsoft.sqlserver.jdbc.SQLServerDriver
        </property>
        <property name="connection.url">
            jdbc:sqlserver://192.168.17.1:1433;databaseName=ITLDIS;useUnicode=true;characterEncoding=utf8;
        </property>
        <property name="connection.username">itil</property>
        <property name="connection.password">itil@hrsl#</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">
            org.hibernate.dialect.SQLServerDialect
        </property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">
            org.hibernate.cache.NoCacheProvider
        </property>
        <property name="show_sql">false</property>
        <!--<property name="hbm2ddl.auto">update</property>-->
        <mapping class="HibernateMapping.Jobcarddetails" />
        <mapping class="HibernateMapping.PdiDetails" />
        <mapping class="HibernateMapping.Vehicledetails" />
        <mapping class="HibernateMapping.MSWDmechanicmaster" />
        <mapping class="HibernateMapping.InstallationDetails" />
        <mapping class="HibernateMapping.InstallationDetails" />
    </session-factory>
</hibernate-configuration>