<div class="container-fluid mb-3 mt-4">
    <!-- <div class="row"> -->
    <div class="card-from w-100">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <p class="mb-0"> Search Spares Purchase Order</p>
                <button [routerLink]="[ './create' ]" class="font-weight-bold btn btn_header bg_white" *ngIf="loginUserType == 'dealer'">
                    <b>New </b>
                </button>
            </div>
            <div class="card-body">

                <app-purchase-order-search [searchSparesPoForm]="searchPoForm" [isShowAdvanceFilter]="isShowAdvanceFilter"></app-purchase-order-search>

               <div class="col-lg-12">
                   <div class="mx-auto d-flex justify-content-between">
                        <div></div>
                        <div>
                            <button type="button" class="btn pl-3 pr-3 mt-2 btn_primary" (click)="searchSparesPo()"
                                [insertQueryParams]="filterData" (initialQueryParams)="initialQueryParams($event)"
                                (onUrlChange)="onUrlChange($event)" title="Search" >
                                Search</button>
                            

                            <button type="button" class="btn pl-3 pr-3 mt-2  ml-2 btn_primary" title="Clear"  (click)="clearForm()">
                                Clear </button>
                                  
                            <button type="button" class="btn pl-3 pr-3 mt-2  ml-2 btn_primary" style="height:35px" title="Download Report" (click)="generateReport()">
                                <mat-icon>cloud_download</mat-icon></button>
                        </div>

                              <a class="font-weight-bold mt-3 cursor_pointer anchorColor"
                                   (click)="showAdvanceSearch()" *ngIf="loginUserType !== 'dealer'">
                                   <u>{{isShowAdvanceFilter ? 'Hide Advance Search Filters' : 'Advance Search'}}</u>
                               </a> 
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- </div> -->
    <!-- <ngsw-search-table [tableTitle]="'Search Result'" [dataTable]="dataTable" [totalElements]="totalTableElements"
        (actionOnTableRecord)="tableAction($event)" [page]="page" [size]="size"
        [clickOnTableFields]="[{'title':'Purchase_Order_Number','isClickable':true},{'title':'Edit','isClickable':true},{'title':'approve','isClickable':true}]"
        (pageChange)="pageSizeChange($event)" [searchValue]="searchValue" [actionButtons]="actionButtons" [isExcelImport]="true" (exportToExcel)="downloadExcel($event)"> -->

        <ngsw-search-table [tableTitle]="'Search Result'" [dataTable]="dataTable" [totalElements]="totalTableElements"
        (actionOnTableRecord)="tableAction($event)" [page]="page" [size]="size"
        [clickOnTableFields]="[{'title':'purchaseOrderNumber','isClickable':true},{'title':'edit','isClickable':true},{'title':'approve','isClickable':true}]"
        (pageChange)="pageSizeChange($event)" [searchValue]="searchValue" 
        [clearSearchRow]="clearSearchRow" [actionButtons]="actionButtons" [isExcelImport]="true" (exportToExcel)="downloadExcel($event)">

        <td></td>
        
        <td [ngsw-searchField]="purchaseOrderNumber" [searchColumnName]="'purchaseOrderNumber'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #purchaseOrderNumber [(ngModel)] ="purchaseOrderNumberNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="orderType" [searchColumnName]="'orderType'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #orderType [(ngModel)] ="orderTypeNgModel">
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="purchaseOrderDate" [searchColumnName]="'purchaseOrderDate'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput [matDatepicker]="purchaseOrderDatePicker" #purchaseOrderDate
                    (dateInput)="etSearchDateValueChange(purchaseOrderDate.value,'purchaseOrderDate')">
                <mat-datepicker-toggle matSuffix [for]="purchaseOrderDatePicker" [(ngModel)] ="purchaseOrderDateNgModel">
                </mat-datepicker-toggle>
                <mat-datepicker #purchaseOrderDatePicker></mat-datepicker>
            </mat-form-field>
        </td>

        <td [ngsw-searchField]="purchaseOrderStatus" [searchColumnName]="'purchaseOrderStatus'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #purchaseOrderStatus [(ngModel)] ="purchaseOrderStatusNgModel">
            </mat-form-field>
        </td>
		<td [ngsw-searchField]="dealerCode" [searchColumnName]="'dealerCode'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #dealerCode [(ngModel)] ="dealerCodeNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="dealerName" [searchColumnName]="'dealerName'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #dealerName [(ngModel)] ="dealerNameNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="supplierType" [searchColumnName]="'supplierType'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #supplierType [(ngModel)] ="supplierTypeNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="supplierName" [searchColumnName]="'supplierName'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #supplierName [(ngModel)] ="supplierNameNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="transferMode" [searchColumnName]="'transferMode'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #transferMode [(ngModel)] ="transferModeNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="transporter" [searchColumnName]="'transporter'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #transporter [(ngModel)] ="transporterNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="freightBorneBy" [searchColumnName]="'freightBorneBy'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #freightBorneBy [(ngModel)] ="freightBorneByNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="totalBaseAmount" [searchColumnName]="'totalBaseAmount'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #totalBaseAmount [(ngModel)] ="totalBaseAmountNgModel">
            </mat-form-field>
        </td>
        <td [ngsw-searchField]="totalPoAmount" [searchColumnName]="'totalPoAmount'">
            <mat-form-field class="w-100 pb_0" appearance="outline" [style.fontSize.px]="10">
                <input matInput #totalPoAmount [(ngModel)] ="totalPoAmountNgModel">
            </mat-form-field>
        </td>
       
    </ngsw-search-table>
</div>