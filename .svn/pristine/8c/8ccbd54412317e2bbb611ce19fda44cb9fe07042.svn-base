<div class="card-from mt-2 service-history" [formGroup]="serviceHistoryForm">
  <div class="card" style="border: 1px solid #45afaf;">
    <div class="card-header" style="background-color: #45afaf;
              border: 1px solid #45afaf;">
      <p class="mb-0" style="font-size: 13px;">SERVICE HISTORY</p>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-sm">
          <thead class="thead-light">
            <tr>
              <th class="p-2" *ngFor="let tableHeading of serviceHistoryHeading">{{tableHeading}}</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let list of serviceHistoryForm.controls; let i=index" [formGroupName]="i">
              <td>
                <mat-form-field appearance="outline" class="w-100">
                  <mat-label>Date In</mat-label>
                  <input matInput [matDatepicker]="picker" placeholder="Date In" formControlName="dateIn">
                  <mat-datepicker-toggle matSuffix [for]="picker"></mat-datepicker-toggle>
                  <mat-datepicker #picker></mat-datepicker>
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline">
                  <mat-label>Type Of Service</mat-label>
                  <input matInput placeholder="Type Of Service" formControlName="serviceType">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline">
                  <mat-label>Hours</mat-label>
                  <input matInput placeholder="Hours" formControlName="hours">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline">
                  <mat-label>Job Card No.</mat-label>
                  <input matInput placeholder="Job Card No." formControlName="jobCardNo">
                </mat-form-field>
              </td>
              <td>
                <mat-form-field appearance="outline" class="w-100">
                  <mat-label>Job Card Date</mat-label>
                  <input matInput [matDatepicker]="picker2" placeholder="Job Card Date" formControlName="jobCardDate">
                  <mat-datepicker-toggle matSuffix [for]="picker2"></mat-datepicker-toggle>
                  <mat-datepicker #picker2></mat-datepicker>
                </mat-form-field>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>