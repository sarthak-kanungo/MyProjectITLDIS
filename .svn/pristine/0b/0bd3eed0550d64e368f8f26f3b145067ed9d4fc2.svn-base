<div class="container-fluid mt-4 mb-3">
    <form [formGroup]="createForm">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-from">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between header">
                                <p class="mb-0"> Dealer Department Details</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <app-dealer-department-master>
                            </app-dealer-department-master>
                        </div>
                        <div class="text-center  mt-2 mb-2" >
                            <button type="button" *ngIf="isCreate"  class="btn  btn_primary px-3" (click)="validateForm()">
                                Submit
                            </button>
                            <button type="button"  *ngIf="isEdit"  class="btn  btn_primary px-3" (click)="validateForm()">
                                Update
                            </button>
                            <button type="button" class="btn  btn_secondary px-3 ml-2"
                                (click)="clearCustomerCreateForm()">
                                Clear
                            </button>
                            <button type="button" *ngIf="isView" class="btn btn_primary pl-3 pr-3 ml-3" (click)="exit()"> Exit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>