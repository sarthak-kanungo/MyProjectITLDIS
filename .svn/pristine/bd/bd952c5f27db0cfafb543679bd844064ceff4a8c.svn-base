                    <td>                    <mat-form-field class="w-100" appearance="outline">
        <mat-label>Nominee Name</mat-label>
        <input matInput placeholder="Nominee Name" [formControl]="option.get('name')" [matAutocomplete]="autoName" (ngModelChange)="getNomineeList($event, option)" (change)=checkEmployeeName(option) required>
        <mat-autocomplete #autoName="matAutocomplete" [displayWith]="displayFnForNominee" [panelWidth]="300" (optionSelected)="getNomineeEmpDetails($event,option)">
          <mat-option *ngFor="let option of nomineeNameList" [value]="option">
