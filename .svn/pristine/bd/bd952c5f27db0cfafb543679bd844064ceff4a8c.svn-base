          <div class=" text-center mt-2" style="margin-bottom: 6px;margin-top:6px;">

            <button *ngIf="isCreate && buttonView" (click)="validateForm()" type="button" class="btn btn_primary px-3 ml-3"
              > Submit
            </button>
            <button *ngIf="isEdit" type="button" class="btn btn_primary px-3  ml-3"
            (click)="validateForm()">Update</button>
          <button *ngIf="'isCreate || isEdit' && buttonView" type="button" class="btn btn_secondary px-3 ml-3" (click)="reset()">
            Clear </button>
