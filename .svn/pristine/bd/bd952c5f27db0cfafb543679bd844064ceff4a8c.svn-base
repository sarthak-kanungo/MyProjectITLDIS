                          <mat-select placeholder="T-Shirt Size" [formControl]="option.get('tShirtSize')">
                            <mat-option>Select</mat-option>
                            <mat-option *ngFor="let size of tshirtSizeChart" [value]="size">
                              {{size}}
                            </mat-option>
                          </mat-select>
                        </mat-form-field>
                        
                      </td>
                      <td style="vertical-align: middle;" *ngIf="disableTshirt">
                        <mat-form-field appearance="outline" style="background-color: #E9ECEF;height: 40px;">
