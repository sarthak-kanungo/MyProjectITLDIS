                 <div class="text-center mt-2 mb-3">
                  <button type="button" class="btn btn-sm btn_primary"  style="margin: 5px;" (click)="addRow()" *ngIf="buttonView && isCreate"> Add
                  </button>
                  <button type="button" class="btn btn-sm btn_primary"  style="margin: 5px;" (click)="deleteRow()" *ngIf="buttonView && isCreate"> Delete
