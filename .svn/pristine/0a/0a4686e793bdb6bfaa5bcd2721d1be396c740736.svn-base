<div class="card-from mt-2" [formGroup]="serviceHistoryForm">
    <div class="card" style="border: 1px solid #45afaf;">
        <div class="card-header" style="background-color: #45afaf;
                        border: 1px solid #45afaf;">
            <p class="mb-0" style="font-size: 13px;">Service History</p>
        </div>
        <div class="card-body">

            <div class="table-responsive mt-1">
                <table class="table table-bordered table-sm">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" style="width: 100px">Date In</th>
                            <th scope="col" style="width: 100px">Type Of Service</th>
                            <th scope="col" style="width: 100px">Hours</th>
                            <th scope="col" style="width: 100px">Job Card No.</th>
                            <th scope="col" style="width: 100px">Job Card Date</th>
                            <th scope="col" style="width: 100px">PCR No.</th>
                            <th scope="col" style="width: 100px">PCR Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr *ngFor="let list of serviceHistoryForm.controls; let i=index" [formGroupName]="i">
                            
                            <td [textContent]="list.get('dateIn').value"></td>
                            <td [textContent]="list.get('serviceType').value"></td>
                            <td [textContent]="list.get('hours').value"></td>        
                            <td >
                              <p (click)="jcModal(list)" class="alink">{{list.get('jobCardNo').value}}</p>
                            </td>
                            <td [textContent]="list.get('jobCardDate').value"></td>        
                            <td >
                              <p (click)="pcrModal(list)" class="alink">{{list.get('pcrNo').value}}</p>
                            </td>
                            <td [textContent]="list.get('pcrDate').value"></td>   
