<div class="container-fluid create-form mt-4 mb-3">
    <div class="card-from">
        <form>
            <div class="card">
                <div class="card-header">
                    <p class="mb-0">Spares Payment Receipt</p>
                </div>

                <app-spare-payment-receipt 
                    [isView]="isView" 
                    [markAllAsTouchedObserv]="markAllAsTouchedObserv">
                </app-spare-payment-receipt>

                <app-payee-details 
                    [isView]="isView" 
                    [markAllAsTouchedObserv]="markAllAsTouchedObserv">
                </app-payee-details>

                <app-payment-detail
                    [isView]="isView" 
                    [markAllAsTouchedObserv]="markAllAsTouchedObserv" *ngIf="isReceiptModeSelected">
                </app-payment-detail>

                <div class=" text-center my-2" *ngIf="!isView">
                    <button type="button" class="btn btn_primary pl-3 pr-3" (click)="validateForm()"  [disabled]="isSubmitDisable">
                        Submit
                    </button>

                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="clearForm()"> Clear
                    </button>

                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="goBack()"> Exit
                    </button>
                </div>
                <div class=" text-center my-2" *ngIf="isView">
                
                    <button type="button" class="btn btn_secondary pl-3 pr-3 ml-3 " (click)="viewPrint('true')"> View PDF
                    </button>
                
                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="goBack()"> Exit
                    </button>
                </div>

            </div>
        </form>

    </div>
</div>