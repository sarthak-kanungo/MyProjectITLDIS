            <mat-form-field appearance="outline">
                <mat-label>Reporting Employee Code</mat-label>
                <input matInput placeholder="Reporting Employee Code" formControlName="reportingEmployeeCode">
                <mat-icon matSuffix>search</mat-icon>
            </mat-form-field>
        </div> -->

        <div class="col-lg-2">
            <mat-form-field class="w-100" appearance="outline">
              <mat-label>Reporting Employee Code</mat-label>
              <input 
                matInput placeholder="Reporting Employee Code" formControlName="reportingEmployeeCode" [matAutocomplete]="autoautoReportingEmployee"
                (ngModelChange)="autoReportingEmployeeCode($event)" >
                <mat-autocomplete #autoautoReportingEmployee="matAutocomplete" [displayWith]="displayFnReportingEmployee" (optionSelected)="reportingEmpCodeSelect($event)" [panelWidth]="300">
                    <mat-option *ngFor="let option of reportingEmloyeeCodeList" [value]="option">
                      {{option.displayValue}}
                    </mat-option>
                  </mat-autocomplete>
                <mat-icon matSuffix>search</mat-icon>
                <!-- <mat-error *ngIf="pickListForm.get('reportingEmployeeCode').hasError('selectFromList')"> Select From List</mat-error> -->
            </mat-form-field>
        </div>

        <div class="col-lg-2">
            <mat-form-field appearance="outline">
                <mat-label>Reporting Employee Name</mat-label>
                <input matInput placeholder="Reporting Employee Name" formControlName="reportingEmployeeName">
            </mat-form-field>
        </div>

       

    </div>
</div>