<div class="container-fluid create-form mt-4 mb-3">
    <div class="card-from">
        <form [formGroup]="sparesSalesInvoiceForm">
            <div class="card">
                <div class="card-header">
                    <p class="mb-0">Sales Invoice</p>
                </div>

                <app-spares-sales-invoice 
                    [isView]="isView" 
                    [isEdit]="isEdit"
                    [isSalesOrderSelected]="isSalesOrderSelected"
                    [sparesSalesInvoiceForm]=sparesSalesInvoiceForm 
                    [markAllAsTouchedObserv]="markAllAsTouchedObserv">
                </app-spares-sales-invoice>
				
				<app-labour-charges 
                    [isView]="isView" 
                    [isEdit]="isEdit"
                    [draftFlag]="draftFlag">
                </app-labour-charges>
                
                <app-outside-job-charges 
                    [isView]="isView" 
                    [isEdit]="isEdit"
                    [draftFlag]="draftFlag">
                </app-outside-job-charges>
                
                <app-spares-sales-invoice-item-details 
                    [isView]="isView" 
                    [isEdit]="isEdit"
                    [poItemDetailForm]="poItemDetailForm"
                    [tcsPerc]="tcsPerc"
                    [machineDetailsFormControl]="sparesSalesInvoiceForm"
                    [markAllAsTouchedObserv]="markAllAsTouchedObserv"
                    [draftFlag]="draftFlag">
                </app-spares-sales-invoice-item-details>
                
                

                <div class=" text-center my-2" *ngIf="!isView">
                    <button type="button" class="btn btn_primary pl-3 pr-3"  [disabled]="isSubmitDisable" (click)="validateForm('submit')">
                        Submit
                    </button>
                    <button type="button" *ngIf="draftFlag" class="btn btn_primary pl-3 pr-3 ml-3"  [disabled]="isSubmitDisable" (click)="validateForm('save')">
                        Save
                    </button>

                    <!-- <button type="button" class="btn btn_secondary pl-3 pr-3 ml-3 " disabled> Export to Excel
                    </button> -->
                    <button type="button" *ngIf="!isEdit && !isView" class="btn btn_primary pl-3 pr-3 ml-3" (click)="clearForm()"> Clear
                    </button>

                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="goBack()"> Exit
                    </button>

                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="backBtn()"> Back
                    </button>

                    
                </div>
                <div class=" text-center my-2" *ngIf="isView">
                    <button type="button" class="btn btn_secondary pl-3 pr-3 ml-3 " *ngIf="referenceDocType === 'Sale Order'" (click)="viewPrint('true','Sale Order')"> View PDF</button>
                    <button type="button" class="btn btn_secondary pl-3 pr-3 ml-3 " *ngIf="referenceDocType === 'Job Card'" (click)="viewPrint('true','Job Card')"> View PDF </button>
                    <button type="button" class="btn btn_secondary pl-3 pr-3 ml-3 " *ngIf="referenceDocType === 'WCR'" (click)="viewPrint('true','WCR')"> View PDF </button>
                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="goBack()"> Exit </button>
                    <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="backBtn()"> Back
                    </button>
                </div>

            </div>
        </form>

    </div>
</div>