@media(min-width:681px){
    .navbar{
        background-color: #00a8a9;
        color: white
    }
    .spacer{
        flex: 1 1 auto;
    }
    a{
        cursor: pointer;
      }
    .account{
    border: 1px solid #aaa;
    width: 50px;
    height: 50px;
    text-align: center;
    margin: 0 auto;
    border-radius: 100%;
    padding: 0px;
    background-color: #fff;
    color: #7dbdd8;
    font-size: 30px;
    font-weight: 600;
    }
    hr {
        margin-top: 1rem;
        margin-bottom: 0.3rem;
        border: 0;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }
    .mobile-icon{
        display: none !important;
    }
    
}
@media(max-width:680px){
    .navbar{
        background-color: #00a8a9;
        color: white
    }
    .spacer{
        flex: 1 1 auto;
    }
    .img-size{
        width: 100px;
        height: 25px;
    }
    a{
        cursor: pointer;
      }
    .account{
    border: 1px solid #aaa;
    width: 50px;
    height: 50px;
    text-align: center;
    margin: 0 auto;
    border-radius: 100%;
    padding: 0px;
    background-color: #fff;
    color: #7dbdd8;
    font-size: 30px;
    font-weight: 600;
    }
    hr {
      display:none !important;
    }
    .border-right{
        display: none;
    }
    
}