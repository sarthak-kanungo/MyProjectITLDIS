<div class="container-fluid create-form  mt-4 mb-3">

    <div class="card-from">
        <div class="card">
            <div class="card-header">
                <p class="mb-0">Activity /Training Proposal</p>
            </div>
            <form [formGroup]="activityProposalForm">
                <div class="card-body">
                    <app-activity-training-proposal-details [activityProposalDetailsForm]=activityProposalDetailsForm
                        [serviceActivityProposalDetails]="serviceActivityProposalDetails">
                    </app-activity-training-proposal-details>
                    <app-sub-activity [subActivityForm]=subActivityForm [serviceActivityProposalDetails]="serviceActivityProposalDetails"></app-sub-activity>
                    <app-heads [headTableForm]=headTableForm [headsTotalForm]=headsTotalForm
                        [serviceActivityProposalDetails]="serviceActivityProposalDetails"></app-heads>

                    <div class=" text-center mt-2 ">
                        <button type="button" class="btn btn_primary pl-3 pr-3" *ngIf="isButtonsShow"
                            (click)="saveAndSubmitForm(true)" [disabled]="isSubmitDisable"> Save
                        </button>
                        <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" *ngIf="isButtonsShow"
                            (click)="saveAndSubmitForm(false)" [disabled]="isSubmitDisable"> Submit
                        </button>
                        <button type="button" class="btn btn_primary px-3 ml-3" *ngIf="isApproval"
                            (click)="approveActivityProposal(true)" [disabled]="isSubmitDisable"> Approve
                        </button>
                        <button type="button" class="btn btn_primary px-3 ml-3" *ngIf="isApproval" 
                        (click)="approveActivityProposal(false)" [disabled]="isSubmitDisable"> Reject
                        </button>
                        <button type="button" class="btn btn_primary px-3 ml-3" *ngIf="isView"> View Pdf
                        </button>
                        <button type="button" class="btn btn_primary px-3 ml-3" [disabled]="isSubmitDisable" *ngIf="isCreate"> Clear
                        </button>
                        <!-- <button type="button" class="btn btn_primary pl-3 pr-3 ml-3" (click)="back()">
                            Back
                        </button> -->
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>