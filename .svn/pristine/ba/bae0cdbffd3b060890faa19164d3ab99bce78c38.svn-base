<div class="container-fluid mt-4 mb-3">
  <form>
    <div class="row">
      <div class="col-lg-12">
        <div class="card-from">
          <div class="card">
            <div class="card-header">
              <div class="d-flex justify-content-between header">
                <p class="mb-0">Search Retro Fitment Campaign</p>
                <div>
                  <button type="button" class="font-weight-bold btn btn_header bg_white btn-xs ml-2 "
                    [routerLink]="['./create']" routerLinkActive="router-link-active">
                    <b class="btnName">New</b>
                  </button>
                </div>
              </div>
            </div>

            <app-retro-fitment-campaign-search [searchForm]="searchForm"></app-retro-fitment-campaign-search>
            <div class="text-center  mt-2 mb-2">
              <button (click)="search()" type="button" class="btn  btn_primary px-3"> Search
              </button>
              <button (click)="clear()" type="button" class="btn  btn_primary px-3 ml-2"> Clear
              </button>
            </div>

          </div>
        </div>
      </div>
    </div>

  </form>

  <div class="mt-2">
    <!-- space for ngsw search table -->
    <ngsw-search-table [tableTitle]="'Search Result'" [dataTable]="dataTable" [totalElements]="totalTableElements"
      (actionOnTableRecord)="tableAction($event)" [clickOnTableFields]="[
        { title: 'retrofitmentNumber', isClickable: true }
      ]" (pageChange)="pageSizeChange($event)" [searchValue]="searchValue" [actionButtons]="actionButtons" [clearSearchRow]="clearSearchRow" >

      <td [ngsw-searchField]="retrofitmentNumber" [searchColumnName]="'retrofitmentNumber'">
          <input class="w-100 borderRadius" #retrofitmentNumber />
      </td>
      <td [ngsw-searchField]="retrofitmentDate" [searchColumnName]="'retrofitmentDate'">
          <input class="w-100 borderRadius" #retrofitmentDate
            type="date" (change)="etSearchDateValueChange(retrofitmentDate.value, 'retrofitmentDate')" />
      </td>
      <td [ngsw-searchField]="campaignName" [searchColumnName]="'campaignName'">
          <input class="w-100 borderRadius" #campaignName />
      </td>
      <td [ngsw-searchField]="startDate" [searchColumnName]="'startDate'">
          <input class="w-100 borderRadius" #startDate
            type="date" (change)="etSearchDateValueChange(startDate.value, 'startDate')" />
      </td>
      <td [ngsw-searchField]="endDate" [searchColumnName]="'endDate'">
          <input class="w-100 borderRadius" #endDate
            type="date" (change)="etSearchDateValueChange(endDate.value, 'endDate')" />
      </td>

    </ngsw-search-table>

  </div>

</div>