<div class="card-from mb-0 mt-2">
    <div class="card" style="border: 1px solid #45afaf;">
      <div class="card-header" style="background-color: #45afaf;
            border: 1px solid #45afaf;">
        <p class="mb-0" style="font-size: 13px;">Dealer Address</p>
      </div>
      <div class="card-body">
  
        <div class="card-from">
          <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                  border: 1px solid #45afaf;">
              <p class="mb-0" style="font-size: 13px;">Billing Address</p>
            </div>
            <div class="card-body">
            <app-address [formName]="dealeraddressForm.controls.billingAddress"></app-address>
            </div>
          </div>
        </div>
  
        <div class="card-from mt-2">
          <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                  border: 1px solid #45afaf;">
              <p class="mb-0" style="font-size: 13px;">Showroom Address</p>
            </div>
            <div class="card-body">
                <app-address [formName]="dealeraddressForm.controls.showRoomAddress"></app-address>
            </div>
          </div>
        </div>
  
        <div class="card-from mt-2 mb-2">
          <div class="card" style="border: 1px solid #45afaf;">
            <div class="card-header" style="background-color: #45afaf;
                  border: 1px solid #45afaf;">
              <p class="mb-0" style="font-size: 13px;">Workshop Address</p>
            </div>
            <div class="card-body">
                <app-address [formName]="dealeraddressForm.controls.workShopAddress"></app-address>
            </div>
          </div>
        </div>
  
      </div>
    </div>
  </div>