<div class="mt-2 remark" [style.fontSize.px]="12" [formGroup]="remarkForm">

    <div class="row mb-1">
        <div class="col-lg-6">
            <div class="d-flex bd-highlight">
                <div class="pr-1 w-25 flex-fill bd-highlight">
                    <label class="col-form-label">Dealer Remarks</label>
                </div>
                <div class="w-75 flex-fill bd-highlight">
                    <mat-form-field appearance="outline">
                        <mat-label>Dealer Remarks</mat-label>
                        <input  matInput placeholder="Dealer Remarks" formControlName="dealerRemarks" maxlength="499">
                    </mat-form-field>
                </div>
            </div>
        </div>
        <div class="col-lg-6" *ngIf="isKaiUser">
            <div class="d-flex bd-highlight">
                <div class="pr-1 w-25 flex-fill bd-highlight">
                    <label class="col-form-label">KAI PCR Remarks</label>
                </div>
                <div class="w-75 flex-fill bd-highlight">
                    <mat-form-field appearance="outline">
                        <mat-label>KAI PCR Remarks</mat-label>
                        <input  matInput placeholder="KAI PCR Remarks" formControlName="pcrRemark" maxlength="499">
                    </mat-form-field>
                </div>
            </div>
        </div>
        <div class="col-lg-6" *ngIf="isKaiUser">
            <div class="d-flex bd-highlight">
                <div class="pr-1 w-25 flex-fill bd-highlight">
                    <label class="col-form-label">KAI Remarks</label>
                </div>
                <div class="w-75 flex-fill bd-highlight">
                    <mat-form-field appearance="outline">
                        <mat-label>KAI Remarks</mat-label>
                        <input  matInput placeholder="KAI Remarks" formControlName="kaiRemarks" maxlength="499">
                    </mat-form-field>
                </div>
            </div>
        </div>

    </div>
        
    </div>



